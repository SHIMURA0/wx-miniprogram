<navigation-bar title="实验仪器选择" back="{{true}}" color="white" background="#4A90E2" />
<view class="page-container">
  <scroll-view scroll-y class="scroll-container">
    <view class="container">
      <view class="instrument-list">
        <view 
          class="instrument-item" 
          wx:for="{{instruments}}" 
          wx:key="index" 
          bindtap="selectInstrument" 
          data-index="{{index}}"
        >
          <view class="instrument-icon">{{item.icon}}</view>
          <text class="instrument-name">{{item.name}}</text>
        </view>
      </view>
    </view>
  </scroll-view>
</view>






