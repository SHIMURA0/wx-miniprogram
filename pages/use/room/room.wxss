page {
  background-color: #f0f2f5;
  font-family: 'Helvetica Neue', Arial, sans-serif;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 50rpx;
  box-sizing: border-box;
}

.header {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.main-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.operation-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 5vh; /* 添加顶部padding */
}

.operation-item {
  width: 70vw;
  height: 70vw;
  margin: 20rpx 0;
  background: linear-gradient(145deg, #e6e6e6, #ffffff);
  border-radius: 25rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 8rpx 8rpx 15rpx #d1d9e6,
              -8rpx -8rpx 15rpx #ffffff;
  transition: all 0.3s ease;
  display: flex;
  justify-content: center;
  align-items: center;
}

.operation-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}




