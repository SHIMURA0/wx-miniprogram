.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading {
  font-size: 16px;
}

.name-input-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
}

.name-input-container text {
  margin-bottom: 20px;
}

.name-input-container input {
  width: 100%;
  height: 40px;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 0 10px;
  margin-bottom: 20px;
}

.name-input-container button {
  width: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 9998;
}

.loading-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(17, 17, 17, 0.7);
  color: #FFFFFF;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  z-index: 9999;
}

.loading-icon {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  background: transparent;
  border: 6rpx solid #FFFFFF;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

